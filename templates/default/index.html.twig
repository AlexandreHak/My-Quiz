{% extends 'base.html.twig' %}

{% block title %}My Quiz{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="row justify-content-center">
            <ul>
                {% for categorie in categories %}
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ categorie.name }}</h5>
                            <a href="{{ path('run_quiz', {'category': categorie.id}) }}" class="card-link">Play</a>
                            <a href="{{ path('scoreboard', {'category': categorie.id}) }}" class="card-link">Score</a>
                        </div>
                    </div>
                {% endfor %}
            </ul>
        </div>
        
    </div>

    {{ parent() }}
{% endblock %}
